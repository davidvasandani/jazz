{
  "name": "jazz-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.1.4",
  "devDependencies": {
    "@changesets/cli": "^2.27.3",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.11.2",
    "typedoc": "^0.25.13",
    "vitest": "1.5.3"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build && cd website/website && pnpm run build",
    "lint": "turbo lint && cd website/website && pnpm run lint",
    "test": "turbo test",
    "format": "pnpm run -r format && cd website/website && pnpm run format",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "release": "pnpm changeset publish && git push --follow-tags"
  },
  "lint-staged": {},
  "version": "0.0.0"
}
